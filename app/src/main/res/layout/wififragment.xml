<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shiftmanagement.fragments.WifiManagement">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        app:titleMarginStart="@dimen/_30sdp"
        app:titleTextColor="@color/blue_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imBack"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginEnd="@dimen/_14sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:text="@string/wifi_management"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_bold"
                android:textSize="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_14sdp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/existingWifiCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:src="@android:drawable/ic_input_add"
                app:fabSize="mini" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="Office Wifi Names"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_wifi_found"
                android:id="@+id/tvNodata"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunitosans_bold"
                android:textColor="@color/black"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wifiNamesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/optionsWifiCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/existingWifiCardView"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        android:visibility="visible"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.8"
                    android:background="@drawable/border"
                    android:padding="@dimen/_5sdp"
                    android:text="GPS with Wifi"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <RadioGroup
                    android:id="@+id/wifiGpsRadioGroup"
                    android:layout_width="0dp"
                    android:layout_weight="2.1"
                    android:weightSum="2.1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/yesRadioButtonWifi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.1"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/noRadioButtonWifi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="No"
                        android:checked="true"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.8"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/border"
                    android:text="Alert on Holiday Attendance"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <RadioGroup
                    android:id="@+id/alertRadioGroup"
                    android:layout_width="0dp"
                    android:layout_weight="2.1"
                    android:weightSum="2.1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/yesRadioButtonHoliday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.1"
                        android:text="Yes"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/noRadioButtonHoliday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="No"
                        android:checked="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="4"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/border"
                    android:text="Penalty if absent on dates of rejected Leave request"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:id="@+id/spinLeaveabsenttype"
                    android:layout_weight="1.6"/>

                <ImageView
                    android:id="@+id/imginfo"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_info"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.8"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/border"
                    android:text="Salary Management"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <RadioGroup
                    android:id="@+id/rdgroupSalManagement"
                    android:layout_width="0dp"
                    android:layout_weight="2.1"
                    android:weightSum="2.1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdbtnsalYes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.1"
                        android:text="Yes"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/rdbtnsalNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="No"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.8"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/border"
                    android:text="Leave Management"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <RadioGroup
                    android:id="@+id/rdgroupleavemangnet"
                    android:layout_width="0dp"
                    android:layout_weight="2.1"
                    android:weightSum="2.1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdbtlevYes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.1"
                        android:text="Yes"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/rdbtnlevNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="No"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.8"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/border"
                    android:text="Show salary details to employee"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <RadioGroup
                    android:id="@+id/rdgroupsalreport"
                    android:layout_width="0dp"
                    android:layout_weight="2.1"
                    android:weightSum="2.1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdbtsalreportYes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.1"
                        android:text="Yes"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/rdbtnsalreportNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="No"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp"
        android:backgroundTint="@color/blue_600"
        android:padding="@dimen/_10sdp"
        android:text="Save" />

</RelativeLayout>