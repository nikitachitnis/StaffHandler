<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/_280sdp"
    android:background="@drawable/shadow_container"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:nextFocusRight="@id/surName"
        android:padding="@dimen/_5sdp"
        android:singleLine="true"
        android:text="Confirm Payment"
        android:layout_margin="@dimen/_1sdp"
        android:textColor="@color/blue_10"
        android:textSize="@dimen/_13sdp"></TextView>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:nextFocusRight="@id/surName"
        android:text="Are you confirming that "
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:nextFocusRight="@id/surName"
        android:text="You are paying Rs 5000/-\nRupee Five Thousand Only "
android:id="@+id/txtlabel1"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"></TextView>

        <TextView
            android:id="@+id/txtlabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:text="To Nikhil Harale ,Employee Id : Nikh23 \nfor the month of October 2020"
            android:layout_margin="@dimen/_1sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"></TextView>

    <CheckBox
        android:id="@+id/chkconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I confirm this amount is transferred to the employee" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnconfirmpay"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/grey_40"
        android:text="Confirm" />
</LinearLayout>