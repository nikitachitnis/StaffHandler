                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/border"
                        android:padding="@dimen/_5sdp"
                        android:text="Special Timing 1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/actionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Clear"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/specialTimingText"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Start Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/startTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Pre Start Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/preStartTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Stop Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/stopTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Post Stop Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/postStopTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_holiday_marking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/specialTimingCardView"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/rl_holiday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/holidayHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/border"
                        android:padding="@dimen/_5sdp"
                        android:text="Holiday Marking"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/actionTextHoliday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Clear"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/holidayHeading"
                        android:weightSum="7">

                        <TextView
                            android:id="@+id/textViewSun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Sun"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/textViewMon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Mon"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textViewTue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Tue"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textViewWed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Wed"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textViewThu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Thu"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textViewFri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Fri"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textViewSat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Sat"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/specialTimingCardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_holiday_marking"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_timing2"
                    >

                    <Button
                        android:id="@+id/specialTimingText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/border"
                        android:padding="@dimen/_5sdp"
                        android:text="Special Timing 2"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/actionText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Clear"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/specialTimingText2"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Start Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/startTime2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Pre Start Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/preStartTime2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Stop Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/stopTime2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Post Stop Time"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/postStopTime2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/border"
                                    android:padding="@dimen/_5sdp"
                                    android:text="00:00"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_holiday_marking2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/specialTimingCardView2"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/rl_holiday2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/holidayHeading2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/border"
                        android:padding="@dimen/_5sdp"
                        android:text="Holiday Marking"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/actionTextHoliday2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Clear"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/holidayHeading2"
                        android:weightSum="7">

                        <TextView
                            android:id="@+id/textViewSun2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Sun"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/textViewMon2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="@dimen/_5sdp"
                            android:text="Mon"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

