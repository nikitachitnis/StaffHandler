            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:text="200"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"></EditText>
    </LinearLayout>
    <View
