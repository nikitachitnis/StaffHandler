<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_300sdp"
    android:background="@drawable/shadow_container"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">



        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:layout_weight="0.9"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Tax deductions details"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_13sdp"></TextView>
        <ImageView
            android:id="@+id/imgcancel"
            android:layout_weight="0.1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtempname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Nikhil Harale"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_11sdp"></TextView>

        <TextView
            android:id="@+id/txtempid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:text="Nikhil Harale"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_11sdp"></TextView>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
