            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="right"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:text="Professional Tax"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.7"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"></TextView>

        <TextView
            android:id="@+id/txtpt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="left"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:text="Rs 200"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"></TextView>
        <EditText
            android:id="@+id/txtpt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:background="@drawable/square_layout"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:text="300"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"></EditText>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
