<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="dataItem"
            type="com.miscos.staffhandler.employer_java.remote.model.designationlist.employeedesignationwise.DataItem" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:text="@{dataItem.designationName}"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:text="@{dataItem.totalNoOfEmployee}"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".8"
                android:padding="@dimen/_5sdp"
                android:text="@{dataItem.havingSmartPhoneAlsoOnApp}"
                android:textColor="@color/green1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:gravity="center"
                android:text="@{dataItem.actionText}"
                android:textSize="@dimen/_9ssp"
                android:background="@{dataItem.employeeData.size()>0 ? @drawable/bg_button:@drawable/bg_red_button}"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/gray"
            android:alpha=".2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>
</layout>