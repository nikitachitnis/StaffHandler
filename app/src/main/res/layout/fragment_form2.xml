<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="resource"
            type="com.miscos.staffhandler.empolyer.util.remoteUtils.Resource" />

        <!-- <variable
             name="data"
             type="com.miscos.staffhandler.empolyer.model.EmploerDataItem" />
 -->
        <variable
            name="data"
            type="com.miscos.staffhandler.employer_java.remote.model.fetchdataform2.EmployeeDataItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8fafd">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_marginStart="62dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                    app:layout_constraintEnd_toStartOf="@id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:text="Organization Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_extra_extra_large"
                    app:layout_constraintBottom_toTopOf="@+id/editTextContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.51" />

                <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barrier"
                    app:constraint_referenced_ids="logo,title"
                    app:barrierDirection="bottom"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier"
                    android:background="@drawable/shadow_container"
                    android:id="@+id/editTextContainer">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/companyNameIcon"
                        android:src="@drawable/ic_company"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/companyName"
                        app:layout_constraintTop_toTopOf="@id/companyName"
                        app:layout_constraintBottom_toBottomOf="@id/companyName"/>


                    <EditText
                        android:id="@+id/companyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="@color/black_60"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Name of the Enterprise"
                        android:inputType="text"
                        android:text="@{data.companyName}"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:nextFocusDown="@id/businessType"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small">

                        <requestFocus />
                    </EditText>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/companyName"
                        app:layout_constraintEnd_toEndOf="@id/companyName"
                        app:layout_constraintTop_toBottomOf="@id/companyName"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:id="@+id/divider"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/businessIcon"
                        android:src="@drawable/ic_business"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/businessType"
                        app:layout_constraintTop_toTopOf="@id/businessType"
                        app:layout_constraintBottom_toBottomOf="@id/businessType"/>



                    <Spinner
                        android:id="@+id/businessType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/business_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:nextFocusDown="@id/name"
                        android:textColor="@color/black_60"
                        android:textSize="@dimen/text_size_small" />

                    <EditText
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/black_60"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:nextFocusDown="@id/name"
                        android:text="@{data.businessType}"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Business Area (Ex. Electronics, Mass communication, Show room)"
                        android:inputType="text"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/businessType"
                        app:layout_constraintEnd_toEndOf="@id/businessType"
                        app:layout_constraintTop_toBottomOf="@id/businessType"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:id="@+id/divider1"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/nameIcon"
                        android:src="@drawable/ic_name"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        app:layout_constraintEnd_toStartOf="@id/name_title"
                        app:layout_constraintTop_toTopOf="@id/name_title"
                        app:layout_constraintBottom_toBottomOf="@id/name_title"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:entries="@array/name_title"
                        android:selectedItemPosition="@{data.getSelectedTitlePos}"
                        android:fontFamily="@font/nunitosans_regular"
                        android:nextFocusDown="@id/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintEnd_toStartOf="@+id/name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:focusable="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Name of the Head"
                        android:inputType="text"
                        android:maxLength="40"
                        android:nextFocusDown="@id/mobile"
                        android:singleLine="true"
                        android:text="@{data.ownerName}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_60"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1">

                    </EditText>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="@id/name"
                        app:layout_constraintStart_toStartOf="@+id/name_title"
                        app:layout_constraintTop_toBottomOf="@id/name" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/mobileIcon"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/mobile"
                        app:layout_constraintTop_toTopOf="@id/mobile"
                        app:layout_constraintBottom_toBottomOf="@id/mobile"/>



                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Mobile Number"
                        android:maxLength="10"
                        android:inputType="number"
                        android:editable="false"
                        android:text="@{data.ownerContact}"
                        android:nextFocusDown="@id/mail"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_60"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/mobile"
                        app:layout_constraintEnd_toEndOf="@id/mobile"
                        app:layout_constraintTop_toBottomOf="@id/mobile"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:id="@+id/divider3"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/mailIcon"
                        android:src="@drawable/ic_mail"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/mail"
                        app:layout_constraintTop_toTopOf="@id/mail"
                        app:layout_constraintBottom_toBottomOf="@id/mail"/>


                    <EditText
                        android:id="@+id/mail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Email Id"
                        android:text="@{data.ownerEmailId}"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:nextFocusDown="@id/noEmployee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider3"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_60"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/mail"
                        app:layout_constraintEnd_toEndOf="@id/mail"
                        app:layout_constraintTop_toBottomOf="@id/mail"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:id="@+id/divider4"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/noEmployeeIcon"
                        android:src="@drawable/ic_employee_count"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/noEmployee"
                        app:layout_constraintTop_toTopOf="@id/noEmployee"
                        app:layout_constraintBottom_toBottomOf="@id/noEmployee"/>


                    <EditText
                        android:id="@+id/noEmployee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:enabled="false"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="No. of Employees"
                        android:text="@{data.noOfEmp}"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:nextFocusDown="@id/officeAddress"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider4"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_60"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:text="Employees"
                        android:textColor="@color/amber_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunitosans_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/noEmployee"
                        app:layout_constraintTop_toBottomOf="@id/divider4" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="@+id/textView6"
                        app:layout_constraintStart_toStartOf="@id/noEmployee"
                        app:layout_constraintTop_toBottomOf="@id/noEmployee" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/attendenceIcon"
                        android:src="@drawable/ic_attendance"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/attendenceType"
                        app:layout_constraintTop_toTopOf="@id/attendenceType"
                        app:layout_constraintBottom_toBottomOf="@id/attendenceType"/>



                    <TextView
                        android:id="@+id/attendenceType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitosans_regular"
                        android:text="Attendance Type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider5"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />

                    <RadioGroup
                        android:id="@+id/rdQR"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/attendenceType"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qrCode"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintEnd_toStartOf="@id/gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QR Code"
                            android:clickable="false"
                            android:checked="@{data.attendanceType.equalsIgnoreCase(`qr`) || data.attendanceType.equalsIgnoreCase(`QR`)}"
                            android:layout_marginTop="@dimen/layout_margin_small"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"/>

                        <RadioButton
                            android:id="@+id/gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qr_with_gps"
                            android:clickable="false"
                            android:checked="@{data.attendanceType.equalsIgnoreCase(`both`) || data.attendanceType.equalsIgnoreCase(`Both`)|| data.attendanceType.equalsIgnoreCase(`gps`)}"
                            android:layout_marginTop="@dimen/layout_margin_small"
                            app:layout_constraintStart_toEndOf="@id/qrCode"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"/>

                        <RadioButton
                            android:id="@+id/gps_with_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gps_with_wifi"
                            android:checked="@{data.attendanceType.equalsIgnoreCase(`gps_with_wifi`) || data.attendanceType.equalsIgnoreCase(`Gps_with_wifi`)}"
                            android:layout_marginTop="@dimen/layout_margin_small"
                            app:layout_constraintStart_toEndOf="@id/gps"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/black"/>
                    </RadioGroup>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rdQR"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_medium"
                        android:id="@+id/divider6"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/addressIcon"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_address"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        app:layout_constraintEnd_toStartOf="@id/officeAddress"
                        app:layout_constraintTop_toTopOf="@id/officeAddress"
                        app:layout_constraintBottom_toBottomOf="@id/officeAddress"/>



                    <TextView
                        android:id="@+id/officeAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:fontFamily="@font/nunitosans_regular"
                        android:text="@{data.officeAddress}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/setLocation"
                        app:layout_constraintTop_toBottomOf="@id/divider6"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />


                    <ImageView
                        android:id="@+id/setLocation"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        app:layout_constraintTop_toTopOf="@id/officeAddress"
                        app:layout_constraintBottom_toBottomOf="@id/officeAddress"
                        android:src="@drawable/ic_gps"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/nunitosans_regular" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/officeAddress"
                        app:layout_constraintEnd_toEndOf="@id/setLocation"
                        app:layout_constraintTop_toBottomOf="@id/officeAddress"
                        android:background="@color/divider_color"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:id="@+id/divider7"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/distanceIcon"
                        android:src="@drawable/ic_distance"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        app:layout_constraintEnd_toStartOf="@id/distance"
                        app:layout_constraintTop_toTopOf="@id/distance"
                        app:layout_constraintBottom_toBottomOf="@id/distance"/>


                    <EditText
                        android:id="@+id/distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_xxxl"
                        android:layout_marginTop="@dimen/layout_margin_extra_large"
                        android:layout_marginBottom="@dimen/layout_margin_extra_large"
                        android:background="#00000000"
                        android:cursorVisible="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Geo Permitted Distance (in meters)"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:text="@{data.geoPermittedDistance}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_60"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider7" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="Meters"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textColor="@color/amber_800"
                        app:layout_constraintBottom_toBottomOf="@+id/distance"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/distance" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Details"
                    android:id="@+id/submit"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:fontFamily="@font/nunitosans_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editTextContainer"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/progress"
            layout="@layout/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resource="@{resource}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>