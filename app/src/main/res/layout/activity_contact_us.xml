<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.ContactUs">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardElevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/help_support"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_140sdp"/>
                <TextView
                    android:text="Help Center"
                    android:textSize="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/blue_800"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Please write us queries on  "
                android:textColor="@color/orange_800"
                android:textSize="@dimen/_18sdp"
                android:gravity="center"
                android:fontFamily="@font/nunitosans_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView

                android:text="help@staffhandler.com"
                android:textColor="@color/blue_A700"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:fontFamily="@font/nunitosans_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>