<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:src="@drawable/smiley_thumb_up"
        android:layout_width="120dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_height="110dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_square_background"
        android:padding="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="How Much Verification licenses you like to Get ?"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinner_licence"
        android:layout_marginTop="10dp"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/spinner_border_background"
        android:entries="@array/verification_licence_count"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_square_background"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="Total Payable Amount"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black_square_background"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:hint="/-"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ok"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_background_border"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Get Licence"
        android:textStyle="bold"
        android:textColor="@color/black" />

</LinearLayout>