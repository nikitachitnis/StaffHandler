<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shadow_container"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">



        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:layout_weight="1.1"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_1sdp"
            android:singleLine="true"
            android:text="Leave deductions details"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_13sdp"></TextView>
        <ImageView
            android:id="@+id/imgcancel"
            android:layout_weight="0.1"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtempname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="left"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Nikhil Harale"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_11sdp"></TextView>

        <TextView
            android:id="@+id/txtempid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.5"
            android:text="Nikhil Harale"
            android:textColor="@color/blue_10"
            android:textSize="@dimen/_11sdp"></TextView>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="left"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_2sdp"
            android:id="@+id/txtwrkingdays"
            android:singleLine="true"
            android:text="Total Working days \t\t30"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            android:id="@+id/txtpresentdays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:text="Present days 27"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"></TextView>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:text="Additional Working days 02"
            android:layout_margin="@dimen/_1sdp"
            android:textColor="@color/black"
            android:id="@+id/txtadditinaldays"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            android:id="@+id/txthalfdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:nextFocusRight="@id/surName"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_margin="@dimen/_1sdp"
            android:text="Half Days 0"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"></TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider_color" />


    <TextView
        android:id="@+id/txtleavetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Leave Status\n\n" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@drawable/square_layout"
        android:id="@+id/horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1"
                />

        </ScrollView>

    </HorizontalScrollView>
    <TextView
        android:id="@+id/txtleavedetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        android:gravity="left"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Paid \t\t10\t\t\t\t5\nSick\t\t10\t\t\t\t6\nMaternity\t\t30\t\t\t \t10" />

    <TextView
        android:id="@+id/txtdeductedtax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:nextFocusRight="@id/surName"
        android:padding="@dimen/_5sdp"
        android:text="Deducted Amount : 1234/-"
           android:layout_margin="@dimen/_1sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"></TextView>
</LinearLayout>