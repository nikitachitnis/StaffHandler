<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="resource"
            type="com.miscos.staffhandler.empolyer.util.remoteUtils.Resource" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/holidayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Holiday Name"
            android:gravity="center"
            android:paddingTop="@dimen/layout_margin_medium"
            android:paddingBottom="@dimen/layout_margin_medium"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLine1"
            app:layout_constraintBottom_toTopOf="@id/barrier"
            android:textColor="@color/black"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:background="@color/editText_background"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/layout_margin_medium"
            android:paddingBottom="@dimen/layout_margin_medium"
            app:layout_constraintStart_toEndOf="@id/guideLine1"
            app:layout_constraintEnd_toStartOf="@id/guideLine2"
            app:layout_constraintBottom_toTopOf="@id/barrier"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/black"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier"
            app:constraint_referenced_ids="date,holidayName"
            app:barrierDirection="bottom"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/layout_holiday_list_item"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            app:layout_constraintBottom_toTopOf="@id/addHoliday"/>

        <TextView
            android:id="@+id/emptyText"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone"
            android:fontFamily="@font/nunitosans_regular"
            app:layout_constraintBottom_toTopOf="@id/addHoliday"
            android:layout_margin="@dimen/layout_margin_xxl"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            android:text="No Holidays Yet! Add Holidays for this year."/>

        <TextView
            android:id="@+id/addHoliday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Upcoming Holiday"
            android:textAllCaps="true"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="@dimen/activity_vertical_margin"
            android:gravity="center"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/progress"
            layout="@layout/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resource="@{resource}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>