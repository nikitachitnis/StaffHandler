<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.EmployeeReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:gravity="center"
            android:visibility="visible"
            app:titleMarginStart="@dimen/_30sdp"
            app:titleTextColor="@color/blue_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imBack"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginEnd="@dimen/_15sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_height="match_parent">

                <TextView
                    android:layout_gravity="center"
                    android:text="Reports filters"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_below="@+id/toolbar"
            android:id="@+id/barrier1"
            android:background="@drawable/shadow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editTextContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/grey_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center"
                    android:text="Employee Report"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/spinnerEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/border_text"
                    android:drawableTint="@color/black"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:fontFamily="@font/nunitosans_regular"
                    android:outlineAmbientShadowColor="@color/blue_600"
                    android:text="Select Employee"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toTopOf="@+id/btnGo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.544"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rdgroupEmpType" />

                <Spinner
                    android:id="@+id/spinnerEmployee1"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/spinnerstyle"
                    android:outlineAmbientShadowColor="@color/blue_600"
                    android:textSize="@dimen/text_size_small"
                    android:dropDownSelector="@color/blue_600"
                    android:visibility="gone"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textDirection="anyRtl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.542"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


                <RadioGroup
                    android:id="@+id/rdgroupEmpType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintBottom_toTopOf="@+id/spinnerEmployee"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" >

                    <RadioButton
                        android:id="@+id/checkAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="7dp"
                        android:shadowColor="@color/blue_600"
                        android:text="All"
                        android:textSize="@dimen/_12sdp"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimary"
                        />

                    <RadioButton
                        android:id="@+id/chkOfficeStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:shadowColor="@color/blue_600"
                        android:textSize="@dimen/_12sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Office Staff"
                         />

                    <RadioButton
                        android:id="@+id/chkShiftStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/blue_600"
                        android:text="Shift Staff"
                        android:textSize="@dimen/_12sdp"
                        android:buttonTint="@color/colorPrimary"
                         />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonGo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/buttonshape"
                    android:text="Go"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerEmployee" />

                <LinearLayout
                    android:weightSum="2"
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/rdgroupEmpType"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gender">




                    <LinearLayout
                        android:gravity="start"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtFromDate"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:enabled="false"
                            android:hint="Select From date"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/imgFromDate"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@color/cardview_shadow_end_color"
                            android:src="@drawable/calendar" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtToDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:hint="Select To date"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:id="@+id/imgToDate"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@color/cardview_shadow_end_color"
                            android:src="@drawable/calendar" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>