<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@id/holidayName"
                app:layout_constraintEnd_toStartOf="@id/holidayName"
                app:layout_constraintTop_toTopOf="@id/holidayName" />

            <EditText
                android:id="@+id/holidayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_xxxl"
                android:layout_marginTop="@dimen/layout_margin_extra_large"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:cursorVisible="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/nunitosans_regular"
                android:hint="Holiday Name"
                android:inputType="text"
                android:maxLength="100"
                android:nextFocusDown="@id/businessType"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black_60"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <requestFocus />
            </EditText>

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/layout_margin_extra_large"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/holidayName" />

            <ImageView
                android:id="@+id/dateIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_event"
                app:layout_constraintBottom_toBottomOf="@id/holidayDate"
                app:layout_constraintEnd_toStartOf="@id/holidayDate"
                app:layout_constraintTop_toTopOf="@id/holidayDate" />

            <TextView
                android:id="@+id/holidayDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_xxxl"
                android:layout_marginTop="@dimen/layout_margin_extra_large"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/layout_margin_extra_large"
                android:fontFamily="@font/nunitosans_regular"
                android:text="Holiday Date"
                android:textColor="@color/black_60"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/setDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />


            <TextView
                android:id="@+id/setDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunitosans_regular"
                android:text="SET DATE"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="@id/holidayDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/holidayDate" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:fontFamily="@font/nunitosans_semibold"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextContainer" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>