<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_authority"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="6">

        <TextView
            android:id="@+id/authorityText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/nunitosans_regular"
            android:layout_weight="3.9"
            android:background="@drawable/border"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <RadioButton
            android:id="@+id/yesRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1.1"
            android:text="Yes"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <RadioButton
            android:id="@+id/noRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="No"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/lv_manualAttendance"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/lv_authority"
        android:weightSum="6">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/nunitosans_regular"
            android:layout_weight="3.0"
            android:text="Can mark attendance for ?"
            android:background="@drawable/border"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rdgroupManualattendance"
            android:layout_weight="3.0" >

            <RadioButton
                android:id="@+id/rdbtnshiftwise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1.5"
                android:text="For Assigned Shift"
                android:checked="true"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp" />

            <RadioButton
                android:id="@+id/rdbtnAllshifts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1.5"
                android:text="For All Shifts"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>